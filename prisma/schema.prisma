generator client {
  provider      = "prisma-client"
  output        = "src/generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  name         String
  email        String  @unique
  passwordHash String
  role         Role    @default(STUDENT)
  image        String?

  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  tutorProfiles TutorProfile[]
  bookings      Booking[]      @relation("StudentBookings")
  review        Review[]

  @@map("user")
}

// Models เดิมที่ไม่ต้องแก้ไข
model TutorProfile {
  id              String   @id @default(uuid())
  userId          String
  bio             String?
  subject         String
  hourlyRate      Float
  profileImageUrl String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user           User           @relation(fields: [userId], references: [id])
  availabilities Availability[]
  review         Review[]
}

model Availability {
  id          String   @id @default(uuid())
  tutorId     String
  date        DateTime
  startTime   DateTime
  endTime     DateTime
  zoomLink    String? // Zoom/Meet link ต่อ slot
  maxStudents Int      @default(1) // default = ตัวต่อตัว
  createdAt   DateTime @default(now())

  tutor    TutorProfile @relation(fields: [tutorId], references: [id])
  bookings Booking[]
}

model Booking {
  id             String        @id @default(uuid())
  studentId      String
  availabilityId String
  status         BookingStatus @default(BOOKED)
  bookedAt       DateTime      @default(now())
  cancelComment  String? // เหตุผล cancel
  cancelBy       Role? // ใครเป็นคน cancel
  videoLink      String? // video record หลังเรียน

  student      User         @relation("StudentBookings", fields: [studentId], references: [id])
  availability Availability @relation(fields: [availabilityId], references: [id])
  reviews      Review[]
}

model Review {
  id             String   @id @default(uuid())
  bookingId      String
  reviewerId     String
  tutorProfileId String
  rating         Int
  comment        String?
  reviewedAt     DateTime @default(now())

  booking      Booking      @relation(fields: [bookingId], references: [id])
  reviewer     User         @relation(fields: [reviewerId], references: [id])
  tutorProfile TutorProfile @relation(fields: [tutorProfileId], references: [id])
}

enum Role {
  STUDENT
  TUTOR
}

enum BookingStatus {
  BOOKED
  COMPLETED
  CANCELLED
}
